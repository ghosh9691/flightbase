@page "/flights/{Id:int}"
@rendermode InteractiveServer
@using FlightBase.Data
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<FlightBaseContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Flight Detail</PageTitle>

@if (flight is null)
{
    <p>Loading...</p>
}
else
{
    <h1>@flight.IcaoAirlineCode @flight.FlightNumber</h1>
    <h5 class="text-muted">@flight.IataAirlineCode @flight.FlightNumber &mdash; @flight.IcaoAircraftType</h5>

    <div class="card mt-4">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5>Route</h5>
                    <table class="table table-sm">
                        <tr>
                            <th>Origin</th>
                            <td>@flight.OriginIcao / @flight.OriginIata</td>
                        </tr>
                        <tr>
                            <th>Destination</th>
                            <td>@flight.DestinationIcao / @flight.DestinationIata</td>
                        </tr>
                        <tr>
                            <th>Duration</th>
                            <td>@($"{(int)flight.Duration.TotalHours}h {flight.Duration.Minutes}m")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5>Info</h5>
                    <table class="table table-sm">
                        <tr>
                            <th>Currently Operated</th>
                            <td>@(flight.IsCurrentlyOperated ? "Yes" : "No")</td>
                        </tr>
                        <tr>
                            <th>Created</th>
                            <td>@flight.CreatedAt.ToString("g")</td>
                        </tr>
                        <tr>
                            <th>Updated</th>
                            <td>@flight.UpdatedAt.ToString("g")</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@($"flights/{Id}/edit")" class="btn btn-primary">Edit</a>
        <a href="flights" class="btn btn-secondary ms-2">Back to List</a>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Flight? flight;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        flight = await context.Flights.FindAsync(Id);
        if (flight is null)
        {
            Navigation.NavigateTo("/flights");
        }
    }
}
