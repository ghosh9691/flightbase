@page "/flights/{Id:int}/edit"
@rendermode InteractiveServer
@using FlightBase.Data
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<FlightBaseContext> DbFactory
@inject NavigationManager Navigation

<PageTitle>Edit Flight</PageTitle>

<h1>Edit Flight</h1>

@if (flight is null)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="flight" OnValidSubmit="HandleSubmit" FormName="EditFlight">
        <DataAnnotationsValidator />
        <ValidationSummary class="text-danger" />

        <FlightFormFields Flight="flight" />

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a href="@($"flights/{Id}")" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Flight? flight;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        flight = await context.Flights.FindAsync(Id);
        if (flight is null)
        {
            Navigation.NavigateTo("/flights");
        }
    }

    private async Task HandleSubmit()
    {
        if (flight is null) return;

        using var context = DbFactory.CreateDbContext();
        context.Flights.Attach(flight);
        context.Entry(flight).State = EntityState.Modified;
        await context.SaveChangesAsync();
        Navigation.NavigateTo($"/flights/{Id}");
    }
}
